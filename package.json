{
  "name": "az-secrets",
  "version": "1.0.0",
  "description": "Azure Key Vault Secrets Explorer - A modern desktop app for searching and managing Key Vault secrets",
  "main": "main.js",
  "homepage": "https://github.com/DmarshalTU/az-secrets",
  "repository": {
    "type": "git",
    "url": "https://github.com/DmarshalTU/az-secrets.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win-x64": "electron-builder --win --x64",
    "build:win-arm64": "electron-builder --win --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:linux-x64": "electron-builder --linux --x64",
    "build:linux-arm64": "electron-builder --linux --arm64",
    "build:linux-armv7l": "electron-builder --linux --armv7l",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "azure",
    "keyvault",
    "secrets",
    "desktop",
    "electron",
    "cross-platform"
  ],
  "author": "DmarshalTU",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@azure/arm-keyvault": "^3.2.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-keys": "^4.7.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "electron-store": "^8.1.0"
  },
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "^2.0.0"
  },
  "build": {
    "appId": "com.dmarshal.az-secrets",
    "productName": "Azure Secrets Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!src/**/*",
      "!.git/**/*",
      "!README.md",
      "!package-lock.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "arm64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64", "armv7l"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64", "armv7l"]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Azure Secrets Explorer"
    },
    "dmg": {
      "title": "Azure Secrets Explorer",
      "icon": "assets/icon.icns",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
} 