{
  "name": "az-secrets",
  "version": "1.0.0",
  "description": "Azure Key Vault Secrets Explorer - A modern desktop app for searching and managing Key Vault secrets",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "azure",
    "keyvault",
    "secrets",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@azure/arm-keyvault": "^3.2.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-keys": "^4.7.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.yourcompany.az-secrets",
    "productName": "Azure Secrets Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!src/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
} 